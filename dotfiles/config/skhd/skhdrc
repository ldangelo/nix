
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

alt + ctrl - h : yabai -m window --swap west
alt + ctrl - j : yabai -m window --swap south
alt + ctrl - k : yabai -m window --swap north
alt + ctrl - l : yabai -m window --swap east

alt - r: yabai -m space --rotate 90

alt - f: yabai -m window --toggle zoom-fullscreen

alt - t: yabai -m window --toggle float;\
         yabai -fm window --grid 4:4:1:1:2:2

alt - b: yabai -m space balance

alt + shift - h: yabai -m window --stack west
alt + shift - l: yabai -m window --stack east

alt + cmd - h: /usr/local/bin/yabai -m window --resize left:10:0
alt + cmd - l: /usr/local/bin/yabai -m window --resize left:-10:0

alt + ctrl - 1: yabai -m space --focus 1
alt + ctrl - 2: yabai -m space --focus 2
alt + ctrl - 3: yabai -m space --focus 3
alt + ctrl - 4: yabai -m space --focus 4
alt + ctrl - 5: yabai -m space --focus 5
alt + ctrl - 6: yabai -m space --focus 6
alt + ctrl - 7: yabai -m space --focus 7
alt + ctrl - 8: yabai -m space --focus 8
alt + ctrl - 9: yabai -m space --focus 9

shift + alt - 1: yabai -m window --space 1; yabai -m space --focus 1
shift + alt - 2: yabai -m window --space 2; yabai -m space --focus 2
shift + alt - 3: yabai -m window --space 3; yabai -m space --focus 3
shift + alt - 4: yabai -m window --space 4; yabai -m space --focus 4
shift + alt - 5: yabai -m window --space 5; yabai -m space --focus 5
shift + alt - 6: yabai -m window --space 6; yabai -m space --focus 6
shift + alt - 7: yabai -m window --space 7; yabai -m space --focus 7
shift + alt - 8: yabai -m window --space 8; yabai -m space --focus 8
shift + alt - 9: yabai -m window --space 9; yabai -m space --focus 9

# increase size
alt - y: yabai -m window --resize top:0:-20
alt - x: yabai -m window --resize top:-20:0

# decrease size
shift + alt - y: yabai -m window --resize bottom:0:-20
shift + alt - x: yabai -m window --resize top:0:20

# create desktop, move window and follow focus - uses jq for parsing json (brew install jq)
shift + alt - n : yabai -m space --create && \
                   index="$(yabai -m query --spaces --display | jq 'map(select(."native-fullscreen" == 0))[-1].index')" && \
                   yabai -m window --space "${index}" && \
                   yabai -m space --focus "${index}"

# application switcher
